<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/fragment_cemetery">
    <fragment
        android:id="@+id/fragment_profile"
        android:name="ir.co.tarhim.ui.fragments.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_fragment_profile_to_fragment_deceased_page"
            app:destination="@id/fragment_deceased_page"
            app:popUpTo="@id/fragment_cemetery" />
        <action
            android:id="@+id/action_fragment_profile_to_fragment_create_deceased"
            app:destination="@id/fragment_create_deceased"
            app:popUpTo="@id/fragment_cemetery" />
        <action
            android:id="@+id/action_fragment_profile_to_user_edit_fragment"
            app:destination="@id/user_edit_fragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_news"
        android:name="ir.co.tarhim.ui.fragments.news.NewsFragment"
        app:popUpTo="@id/fragment_cemetery"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_fragment_news_to_details_news_fragment"
            app:destination="@id/details_news_fragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_cemetery"
        android:name="ir.co.tarhim.ui.fragments.cemetery.CemeteryFragment"
        tools:layout="@layout/fragment_cemetery">
        <action
            android:id="@+id/action_fragment_cemetery_to_fragment_deceased_page"
            app:destination="@id/fragment_deceased_page"
            app:popUpTo="@id/fragment_cemetery" />
        <action
            android:id="@+id/action_fragment_cemetery_to_fragment_create_deceased"

            app:destination="@id/fragment_create_deceased"
            app:popUpTo="@id/fragment_cemetery" />
        <action
            android:id="@+id/action_fragment_cemetery_to_fragment_profile"
            app:destination="@id/fragment_profile"
            app:popUpTo="@id/fragment_cemetery" />
    </fragment>

    <fragment
        android:id="@+id/fragment_deceased_page"
        android:name="ir.co.tarhim.ui.fragments.deceased.DeceasedPageFragment"

        tools:layout="@layout/deceased_profile">
        <action
            android:id="@+id/action_fragment_deceased_page_to_fragment_create_deceased"
            app:destination="@id/fragment_create_deceased" />
    </fragment>

    <fragment
        android:id="@+id/fragment_create_deceased"
        android:name="ir.co.tarhim.ui.fragments.deceased.CreateDeceased"
        tools:layout="@layout/create_deceased">
        <action
            android:id="@+id/action_fragment_create_deceased_to_maps_fragment"
            app:destination="@id/maps_fragment" />

    </fragment>

    <fragment
        android:id="@+id/maps_fragment"
        android:name="ir.co.tarhim.ui.fragments.deceased.MapsFragment"
        tools:layout="@layout/fragment_maps">

    </fragment>
    <fragment
        android:id="@+id/details_news_fragment"
        android:name="ir.co.tarhim.ui.fragments.news.DetailsNewsFragment"
        tools:layout="@layout/details_news">

    </fragment>


    <fragment
        android:id="@+id/user_edit_fragment"
        android:name="ir.co.tarhim.ui.fragments.profile.EditProfileFragment"
        tools:layout="@layout/edit_user_profile">
        <action
            android:id="@+id/action_user_edit_fragment_to_fragment_profile"
            app:destination="@id/fragment_profile" />
    </fragment>


    <fragment android:id="@+id/fragment_requirement"
        tools:layout="@layout/fragment_requirement"
        android:name="ir.co.tarhim.ui.fragments.require.RequirementFragment"/>
</navigation>