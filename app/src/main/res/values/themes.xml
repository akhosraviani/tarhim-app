<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tarhim" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_600</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="colorControlNormal">@color/blue_grey_200</item>

    </style>

    <style name="bottomNavigate" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layoutDirection">rtl</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>


    <style name="TarhimTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/selector_tab_layout</item>
        <item name="android:layout_gravity">fill</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabInlineLabel">true</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabPadding">10dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/grey_600</item>
        <item name="tabSelectedTextColor">@color/black</item>

    </style>

</resources>