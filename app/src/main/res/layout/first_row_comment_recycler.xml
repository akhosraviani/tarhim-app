<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ImVNews"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".01" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/BtnLikeNews"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ImVNews"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toStartOf="@+id/ImVNews"
        app:layout_constraintTop_toBottomOf="@+id/ImVNews"
        app:layout_constraintVertical_bias="0.029" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TvCountLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="548"
        app:layout_constraintHorizontal_bias=".97"
        app:layout_constraintBottom_toBottomOf="@+id/BtnLikeNews"
        app:layout_constraintEnd_toStartOf="@+id/BtnLikeNews"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BtnLikeNews" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TvDescriptionNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnLikeNews"
        app:layout_constraintVertical_bias=".01"
        tools:text="dadgshhfgshgfhs" />


</androidx.constraintlayout.widget.ConstraintLayout>