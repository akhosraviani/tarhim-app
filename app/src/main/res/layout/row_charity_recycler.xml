<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <androidx.appcompat.widget.AppCompatButton xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/BtnCharity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/shape_button"
        android:fontFamily="@font/iran_sans_medium"
        android:gravity="center"
        android:longClickable="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:text="text chatiry" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:id="@+id/badgeViewRoot"
        android:background="@drawable/badge_item_count"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/BtnCharity"
        app:layout_constraintEnd_toEndOf="@id/BtnCharity"
        app:layout_constraintHorizontal_bias=".01"
        app:layout_constraintStart_toStartOf="@+id/BtnCharity"
        app:layout_constraintTop_toTopOf="@id/BtnCharity">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/badge_notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/iran_sans_medium"
            android:gravity="center"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="14sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
